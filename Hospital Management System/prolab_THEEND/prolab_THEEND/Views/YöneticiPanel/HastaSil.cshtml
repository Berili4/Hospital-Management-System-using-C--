@model prolab_THEEND.Models.CombinedModels
@{
    ViewBag.Title = "HastaSil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<Br />
<h2>Hasta Sil</h2>
@using (Html.BeginForm())
{
    <div class="form-container">
        @Html.TextBoxFor(x => x.Hasta.TcKimlikNo, new { @class = "input-field", placeholder = "Hasta TC" })

        <input type="submit" class="submit-button" value="Sil">
    </div>
}
@{
    string mesaj = TempData["GuncellemeMesaj"] as string;
    string durum = TempData["GuncellemeMesaj_Durum"] as string;
    string h2Class = "";
    if (durum == "Onay")
    {
        h2Class = "text-primary";
    }
    else if (durum == "Red")
    {
        h2Class = "text-danger";
    }
    <h2 class=@h2Class>@mesaj</h2>
}
<br />
<h2>Hasta Listesi</h2>

<style>
    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        border-bottom: 1px solid #ddd;
        padding: 10px;
    }

    strong {
        font-size: 16px;
    }

    button {
        background-color: #ffc107;
        border: none;
        color: white;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

    .form-container {
        margin-bottom: 20px;
    }

    .input-field {
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        width: 200px;
        margin-right: 10px;
    }

    .submit-button {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<ul>
    @{
        List<prolab_THEEND.Models.Hasta> hastaList = prolab_THEEND.Controllers.HomeController.hastaModifier.HastaDatabase;

        for (int i = 0; i < hastaList.Count; i++)
        {
            using (Html.BeginForm())
            {
                <li>
                    <strong>@hastaList[i].Ad @hastaList[i].SoyAd</strong>
                </li>
            }
        }
    }
</ul>
